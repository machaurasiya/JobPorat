<h1 class="text-center mb-4">Show All Profiles</h1>

<% @profiles.each do |profile| %>
  <div class="container mb-4 mt-4">
    <div class="row justify-content-md-center">
      <div class="card col-4">
        <% if profile.image.attached? %>
          <%= image_tag profile.image,style: "width: 400px; height:300px" %>
        <% end %>
      </div>
    
      <div class="card col-8">
        <h5 class="card-title"><%= profile.name %></h5>
        <p class="card-text"><%= profile.mobile %></p>
        <p class="card-text"><%= profile.gender %></p>
        <p class="card-text"><%= profile.date_of_birth %></p>
        <p class="card-text"><%= profile.address %></p>
        <p class="card-text"><%= profile.city %></p>
        <p class="card-text"><%= profile.pincode %></p>
        <p class="card-text"><%= profile.profile_summury %></p>
        <%= link_to 'See Profile', profile_path(profile.id), class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>

<div class="container mb-4 mt-4">
  <% if can? :create, Profile %>
    <%= link_to 'Create a Profile', new_profile_path, class: 'btn btn-info btn-lg' %>
  <% end %>
</div>
