<h1 class="text-center my-4">Home Page</h1>

<div class="container my-5">
  <div class="card shadow-sm">
    <div class="card-body">
      <% if user_signed_in?%> 
        <h2 class="card-text">Welcome, <%= current_user.email %></h2>
        <% if current_user && current_user.profiles.any?%>
          <h2 class="card-text">Welcome, <%= current_user.profiles.first.name %></h2>
        <% end %>
      <% end %>

      <div class="my-3">
        <% if can? :read, Post %>
          <%= link_to 'Read Posts', posts_path, class: "btn btn-info btn-lg mx-2" %>
        <% end %>

        <% if can? :create, Post %>
          <%= link_to 'Create Post', new_post_path, class: "btn btn-success btn-lg mx-2" %>
        <% end %>

        <% if can? :create, Profile %>
          <%= link_to 'Create Profile', new_profile_path, class: "btn btn-warning btn-lg mx-2" %>
        <% end %>

        <% if can? :read, Profile %>
          <%= link_to 'Show All Profiles', profiles_path, class: "btn btn-info btn-lg mx-2" %>
        <% end %>
      </div>
    </div>  
  </div>
</div>
