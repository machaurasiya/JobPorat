<h1>Show Your Application</h1>

<% if @job.resume.attached? %>
    <%= image_tag @job.resume, style: "width: 400px; height:300px" %>
<% end %>
<%= @job.status %><br>
<%= link_to 'Home page', root_path %><br><br>
<% if can? :destroy, JobApplication %>
    <%= link_to "Destroy", post_path(@post), data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?"
        } %> <br><br>
<% end %>
